{
  "version": "0.2",
  "import": ["@cspell/dict-de-ch/cspell-ext.json"],
  "language": "en,de-CH",
  "languageSettings": [
    {
      "languageId": "markdown",
      "dictionaries": ["technical-terms", "de-ch"]
    }
  ],
  "dictionaries": [
    "technical-terms"
  ],
  "dictionaryDefinitions": [
    {
      "name": "technical-terms",
      "path": "./.cspell/technical-terms.txt",
      "addWords": true
    }
  ],
  "words": [],
  "ignoreWords": [
    "TODO",
    "FIXME",
    "HACK",
    "XXX",
    "BUG"
  ],
  "patterns": [
    {
      "name": "code-blocks",
      "pattern": "/```[\\s\\S]*?```/g"
    },
    {
      "name": "inline-code",
      "pattern": "/`[^`]*`/g"
    },
    {
      "name": "urls",
      "pattern": "/https?:\\/\\/[^\\s)]+/g"
    },
    {
      "name": "file-paths",
      "pattern": "/[a-zA-Z0-9_\\-\\/\\.]+\\.(java|ts|js|html|css|yaml|yml|md|json)/g"
    }
  ],
  "ignoreRegExpList": [
    "code-blocks",
    "inline-code", 
    "urls",
    "file-paths"
  ],
  "files": [
    "**/*.md"
  ],
  "ignorePaths": [
    "node_modules/**",
    ".git/**",
    "target/**",
    "dist/**",
    "coverage/**"
  ]
} 